{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "QDRANT_URL": "@qdrant_url",
    "QDRANT_API_KEY": "@qdrant_api_key",
    "OPENROUTER_API_KEY": "@openrouter_api_key",
    "COLLECTION_NAME": "book_v1",
    "EMBEDDING_MODEL": "text-embedding-3-small",
    "LLM_MODEL": "anthropic/claude-3.5-sonnet"
  }
}
